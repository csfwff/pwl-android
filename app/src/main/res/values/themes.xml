<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PWL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="PwlButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorSecondary">@color/main</item>
    </style>

    <style name="Main" parent="Theme.PWL">
        <item name="colorPrimaryDark">@color/main_status</item>
    </style>

    <style name="UserInfo" parent="Theme.PWL">
        <item name="colorPrimaryDark">@color/main_status</item>
        <item name="colorPrimary">@color/main_bar</item>
        <item name="colorSecondary">@color/msg_redpack</item>
    </style>

</resources>