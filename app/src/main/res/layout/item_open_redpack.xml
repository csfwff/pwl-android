<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_12dp"
    android:paddingRight="@dimen/_12dp"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/_4dp"
    android:paddingBottom="@dimen/_4dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_48dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_24dp"
        android:layout_height="@dimen/_48dp">
        <ImageView
            android:layout_width="@dimen/_48dp"
            android:id="@+id/headImg"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_bg"
            android:layout_height="@dimen/_48dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:lines="1"
            android:id="@+id/userNameTv"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/bg_zero"
                android:padding="@dimen/_2dp"
                android:id="@+id/zeroTv"
                android:text="@string/info_zero"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/bg_max"
                android:padding="@dimen/_2dp"
                android:textColor="@color/white"
                android:id="@+id/maxTv"
                android:text="@string/info_max"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:gravity="end"
        android:id="@+id/numTv"
        android:lines="1"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
</LinearLayout>