<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_8dp"
    android:paddingBottom="@dimen/_8dp"
    android:paddingLeft="@dimen/_12dp"
    android:paddingRight="@dimen/_12dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/timeTv"
                android:lines="1"
                android:textSize="@dimen/_12sp"
                android:layout_marginRight="2dp"
                android:textColor="@color/tv_c"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/userTv"
                android:textSize="14sp"
                android:lines="1"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_4dp"
            android:layout_marginTop="@dimen/_2dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:orientation="vertical"
                android:id="@+id/redpackLl"
                android:background="@drawable/bg_msg_redpack_mine"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@mipmap/redpack"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_4dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:id="@+id/redpackContentTv"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/tv_6"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/redpackTypeTv"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_redpack_type"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/msg_arrow_redpack_mine"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_48dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_24dp"
        android:layout_height="@dimen/_48dp">
        <ImageView
            android:layout_width="@dimen/_48dp"
            android:id="@+id/headImg"
            android:scaleType="centerCrop"
            android:src="@mipmap/main_bg_2"
            android:layout_height="@dimen/_48dp"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>