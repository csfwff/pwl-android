<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".ui.activity.UserInfoActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:layout_height="256dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:src="@mipmap/main_bg_2"
                app:layout_collapseMode="parallax"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="52dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_64dp"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="@dimen/_32dp"
                                android:layout_height="@dimen/_64dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:id="@+id/headImg"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/main_bg_2"
                                    android:layout_height="match_parent"/>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_width="20dp"
                                android:id="@+id/appRoleImg"
                                android:layout_gravity="end|bottom"
                                android:src="@mipmap/role_hacker"
                                android:layout_height="20dp"/>
                        </FrameLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:id="@+id/userRoleImg"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="4dp"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_20sp"
                                android:id="@+id/userNameTv"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/userIdTv"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:id="@+id/userIntroTv"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/_4dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:id="@+id/userNoTv"
                                android:paddingHorizontal="4dp"
                                android:background="@drawable/bg_topic"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:id="@+id/locateLl"
                                android:layout_marginLeft="4dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:src="@mipmap/locate"
                                    android:adjustViewBounds="true"
                                    android:layout_height="20dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:id="@+id/locateTv"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="4dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:src="@mipmap/coin"
                                    android:adjustViewBounds="true"
                                    android:layout_height="20dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:id="@+id/coinTv"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/medalRv"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/appbar"
        android:visibility="gone"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_margin="16dp"
        android:clickable="true"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>